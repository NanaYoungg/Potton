<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMain">
    <ImageView
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorSlapsh"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스 설정"
        style="@style/MenuTitleBtn"
        app:layout_constraintRight_toRightOf="@id/tool_bar"
        app:layout_constraintTop_toTopOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="@id/tool_bar"
        android:layout_marginRight="10dp"
        />
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/bluetooth_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/menu_btn"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="블루투스 설정하기"
        android:textColor="@color/colorWhith"
        android:fontFamily="@font/nanumbarungothic_bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
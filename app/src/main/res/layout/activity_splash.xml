<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSlapsh"
   >


    <ImageView
        android:id="@+id/splash_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/splash_tv"
        android:layout_marginTop="100dp"
        />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/check_mark"
        app:layout_constraintTop_toTopOf="@id/splash_gif"
        app:layout_constraintBottom_toBottomOf="@id/splash_gif"
        app:layout_constraintRight_toRightOf="@id/splash_gif"
        app:layout_constraintLeft_toLeftOf="@id/splash_gif"
        />

    <TextView
        android:id="@+id/splash_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/SplashFont"
        android:layout_marginTop="100dp"
        android:text="P O T T N"


        />






</androidx.constraintlayout.widget.ConstraintLayout>